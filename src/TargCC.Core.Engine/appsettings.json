{
  "Database": {
    "ConnectionString": "Server=localhost;Database=TargCCOrdersNew;Integrated Security=true;TrustServerCertificate=true;",
    "IsEncrypted": false,
    "provider": "SqlServer",
    "commandTimeoutSeconds": 30,
    "enablePooling": true,
    "minPoolSize": 0,
    "maxPoolSize": 100
  },
  "Plugins": {
    "PluginDirectory": "plugins",
    "useIsolation": true,
    "autoLoadOnStartup": true,
    "pluginsToLoad": [],
    "pluginsToExclude": []
  },
  "logging": {
    "minimumLevel": "Information",
    "logToConsole": true,
    "logToFile": true,
    "logFilePath": "logs/targcc.log",
    "logToDatabase": false,
    "maxLogFileSizeMB": 10,
    "retainedFileCount": 7
  },
  "Security": {
    "encryptionKey": "YourSecureEncryptionKey-ChangeThis!",
    "enableEncryption": true,
    "authenticationMode": "Windows",
    "requireHttps": true,
    "allowedOrigins": []
  },
  "appSettings": {
    "Environment": "Development",
    "MaxConcurrentOperations": "10"
  }
